FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U_adj_T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
	inlet
    {
		type            fixedValue;
        value           uniform (0 0 0); // Always (0, 0, 0)
    }

    outlet
    {
        type            adjointOutletVelocityHeat;
        value           uniform (0 0 0);
    }

    walls
    {
        type            noSlip;
    }

    frontAndBack
    {
        type            empty;
    }

    force_out
    {
        type            noSlip;
    }

    force_in
    {
        type            noSlip;
    }
}

