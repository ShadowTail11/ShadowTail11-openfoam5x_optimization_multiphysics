FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U_adj_U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform (0 -0.45 0);    // Match inlet velocity of U
    }

    outlet
    {
        type            adjointOutletVelocityPower;
        value           uniform (0 0 0);
    }

    Wall
    {
        type            noSlip;
    }

    right
    {
        type            symmetry;
    }

    frontAndBack
    {
        type            empty;
    }
}

